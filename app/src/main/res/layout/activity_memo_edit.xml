<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="메모 작성"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:paddingBottom="48dp">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="적용 대상"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="무엇에 적용하시나요? (예: 자동차 브레이크)"
                        style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTarget"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:inputType="text"/>
                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="개선하려는 특성"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="?attr/colorOnSurface"/>

                    <Spinner
                        android:id="@+id/spinnerImproving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="악화되는 특성"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="?attr/colorOnSurface"/>

                    <Spinner
                        android:id="@+id/spinnerWorsening"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="추천 발명원리"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="?attr/colorOnSurface"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRecommend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="추천받기"
                        android:textSize="12sp"
                        style="@style/Widget.Material3.Button.ElevatedButton"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tvRecommendedHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="특성을 선택하고 추천받기를 누르세요. 카드를 클릭하여 선택할 수 있습니다."
                    android:textSize="13sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:paddingBottom="8dp"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerRecommendedPrinciples"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="선택한 발명원리"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:paddingBottom="8dp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:id="@+id/tvSelectedPrinciples"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위에서 카드를 선택하세요"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:minHeight="48dp"
                        android:paddingTop="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardElevation="2dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="챗봇 프롬프트"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="?attr/colorOnSurface"/>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopyPrompt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="복사"
                            android:textSize="12sp"
                            style="@style/Widget.Material3.Button.ElevatedButton"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvPrompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="위 정보를 입력하면 챗봇에게 물어볼 프롬프트가 생성됩니다"
                        android:textSize="14sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:minHeight="150dp"
                        android:padding="12dp"
                        android:background="?attr/colorSurfaceContainerHighest"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="저장"
                android:minHeight="56dp"
                style="@style/Widget.Material3.Button.ElevatedButton"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
