<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:title="앱 정보"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="?attr/homeAsUpIndicator"
        app:navigationIconTint="@android:color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:attr/colorBackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- 앱 아이콘 및 이름 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="24dp">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/ic_launcher"
                    android:contentDescription="앱 아이콘"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TRIZ 문제 해결 도구"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorPrimary"
                    android:paddingTop="16dp"/>

                <TextView
                    android:id="@+id/tvVersion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="버전 1.0.0"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:paddingTop="4dp"/>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- 앱 설명 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="소개"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:paddingBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TRIZ 40가지 발명원리와 모순 매트릭스를 쉽게 학습하고 활용할 수 있는 교육용 무료 앱입니다."
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:lineSpacingExtra="4dp"
                android:paddingBottom="24dp"/>

            <!-- 이용약관 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTerms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="이용약관"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 개인정보 처리방침 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPrivacy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="개인정보 처리방침"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- 오픈소스 라이선스 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardLicense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="오픈소스 라이선스"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- GitHub 저장소 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardGithub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="GitHub 저장소"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textSize="18sp"
                        android:textColor="?attr/colorOnSurfaceVariant"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"/>

            <!-- 저작권 정보 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="© 2025 TRIZ 문제 해결 도구"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:paddingTop="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="교육 목적의 무료 앱입니다"
                android:textSize="12sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:gravity="center"
                android:paddingTop="4dp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
